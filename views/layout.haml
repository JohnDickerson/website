%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    - if not defined? @subtitle
      %title John P. Dickerson
    - else
      %title #{@subtitle} &mdash; John P. Dickerson
    %meta{:name => "description", :content => "Personal website for John P. Dickerson"}
    %meta{:name => "author", :content => "John P. Dickerson"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}

    %link{:href => "/vendor/css/bootstrap-theme-cerulean.min.css", :type => "text/css", :rel => "stylesheet"}
    /%link{:href => "/vendor/css/bootstrap-theme.min.css", :type => "text/css", :rel => "stylesheet"}
    %link{:href => "/css/styles.css", :type => "text/css", :rel => "stylesheet"}
    %link{:href => "/css/sticky-footer.css", :type => "text/css", :rel => "stylesheet"}

    / IE 6-8 can now load HTML5  
